---
extends: default

rules:
  comments:
    min-spaces-from-content: 1
  comments-indentation: disable
  empty-lines:
    max: 1
  indentation:
    spaces: 2
  line-length:
    max: 100
  braces:
    min-spaces-inside: 1
    max-spaces-inside: 1
  brackets:
    min-spaces-inside: 1
    max-spaces-inside: 1
  truthy:
    allowed-values: ['true', 'false', 'on']
